{
    "name": "aws-crt-kotlin",
    "packages": [],
    "variables": {
        "gradlew": "{source_dir}/gradlew -p {source_dir}"
    },
    "build_steps": [
        "{gradlew} assemble"
    ],
    "post_build_steps": [
        "{gradlew} publishToMavenLocal"
    ],
    "test_steps": [
        "{gradlew} test allTests"
    ],
    "imports": [
        "JDK8"
    ],
    "build_dir": "target/cmake-build",
    "env": {
        "JAVA_HOME": "{java_home}"
    },
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "debian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        }
    },
    "targets": {
        "linux": {
            "imports": [
                "s2n"
            ],
            "!build_steps": [
                "{gradlew} assemble -Dlibcrypto.path={libcrypto_path}"
            ],
            "!test_steps": [
                "{gradlew} test allTests -Dlibcrypto.path={libcrypto_path}"
            ]
        }
    }
}
